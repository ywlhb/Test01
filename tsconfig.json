{
        "compilerOptions": {
            "module": "system",
            "target": "ES6",
            "noImplicitAny": true,
            "removeComments": true,
            "preserveConstEnums": true,
            "outFile": "./src/js/tsc.js",
            "sourceMap": true
        },
        "include": [
            "src/ts/**/*.ts"
        ],
        "exclude": [
            "node_modules",
            "**/*.spec.ts"
        ]
}